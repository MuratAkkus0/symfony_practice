{% extends "base.html.twig"%}

{# parent ile parentteki o blok icerisindeki icerigi direk alabilirsin. #}
{% block title %}
	{{ parent() }}
	Merhaba
{% endblock %}

{% block body %}
	<main
		class="w-full h-full flex flex-col min-h-0">
		<!-- 2. Flex container'ın sıkışma izni -->
		<header class="shrink-0 w-full h-20 bg-black text-white font-medium flex justify-between items-center px-6 sticky top-0"><!-- 3. Stick header -->
			<!-- Header içeriği aynı kalıyor -->
		</header>

		<section
			class="flex-1 min-h-0 grid grid-cols-12">
			<!-- 4. Grid'in overflow kontrolü -->
			<aside
				class="col-span-4 p-4 overflow-y-auto border-r">
				<!-- 5. Sidebar scroll'u -->
				<h1 class="text-xl font-medium mb-4">Current User:</h1>
				<!-- User Card içeriği -->
			</aside>

			<div
				class="col-span-8 flex flex-col h-full min-h-0">
				<!-- 6. Ana içerik container'ı -->
				<h1 class="text-xl font-medium p-4">User List:</h1>
				<div
					class="flex-1 overflow-y-auto px-4 pb-4">
					<!-- 7. Scroll alanı -->
					<div
						class="grid grid-cols-1 lg:grid-cols-3 gap-4">
						<!-- 8. Responsive grid -->
						{% for user in users %}
							<div class="h-72 bg-white rounded-lg shadow-md overflow-hidden flex flex-col">
								<div class="flex-1 relative overflow-hidden">
									<img class="w-full h-full object-cover" src="{{asset('images/web_dark_sq_na.svg')}}" alt="Fake User Image">
								</div>
								<div class="p-3 bg-gray-50">
									<p class="font-medium text-center">{{user.name}}
										{{user.surname}},
										{{user.age}}</p>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</main>

