{% extends "base.html.twig"%}

{% block title %}
	User Info
{% endblock %}

{% block body %}

	<main class="w-full h-full flex flex-col min-h-0">

		{% include 'components/general/_header.html.twig' %}

		<section class="flex-1 min-h-0 grid grid-cols-12">

			<aside class="col-span-4 p-4 flex flex-col overflow-y-auto border-r">
				<h1 class="text-xl font-medium mb-4">Current User:</h1>

				<div class="flex-[1] ">

					{% for user in users %}

						{% if user.id is same as(userId) %}
							{{ include("components/atoms/_userCard.html.twig",{name:user.name,surname:user.surname,age:user.age}) }}
						{% endif %}
					{% endfor %}
				</div>
			</aside>

			<div class="col-span-8 flex flex-col h-full min-h-0">
				<h1 class="text-xl font-medium p-4">User List:</h1>
				<div class="flex-1 overflow-y-auto px-4 pb-4">
					<div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
						{% for user in users %}
							{% if user.id != userId %}
								{{ include("components/atoms/_userCard.html.twig",{name:user.name,surname:user.surname,age:user.age}) }}
							{% endif %}
						{% endfor %}
					</div>
				</div>
			</div>
		</section>
	</main>

{% endblock %}
